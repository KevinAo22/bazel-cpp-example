# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Tab indentation
[*]
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true

[{*.cpp,*.h}]
indent_style = space
indent_size = 3

[{*.yml,*.yaml,*.json}]
indent_style = space
indent_size = 2